extends RichTextLabel
var _first = false

func _ready():
	
	if !_first:
		get_v_scroll().show()
		_first = true
	set_size(Vector2(get_size().x,get_size().y+1))
	if get_v_scroll().is_visible():
		call_deferred(\"_ready\")
	else:
		get_parent().set_size(get_size())
		get_v_scroll().hide()
